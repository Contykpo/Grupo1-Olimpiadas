<UserControl x:Class="Olimpiadas.RecursosWPF.UserControlCreacionUsuario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Olimpiadas.RecursosWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid
        Background="White">

        <StackPanel
            HorizontalAlignment="Center">

            <TextBlock
                Margin="0 20 0 0"
                Text="Crear Usuario"
                FontSize="30"/>

            <Label 
                Content="Nombre"
                Margin="0 50 0 0"/>
            <TextBox/>

            <Label 
                Content="Contraseña"
                Margin="0 50 0 0"/>
            <PasswordBox/>

        </StackPanel>
    </Grid>
</UserControl>
